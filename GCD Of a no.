GCD OF A NO:
-----------------------------------------------------------------------------------------------------------------------------------------------------------
#include<iostream>
using namespace std;
int main()
{
    int a,b,gcd,i;
    cin>>a>>b;
    for(i=1;i<=a && i<=b;i++)
    {
        if(a%i==0 && b%i==0)
        {
            gcd=i;
        }
    }
    cout<<"gcd of "<<a<<" "<<b<<"  is "<<gcd<<endl;
    return 0;
}
-----------------------------------------------------------------------------------------------------------------------------------------------------------------

USING RECURSION:
___________________________________________________________________________________________________________________________________________________________________
#include<iostream>
using namespace std;
int g(int a,int b);
int main()
{
    int a,b;
    cin>>a>>b;
    cout<<"gcd of "<<(g(a,b));
    return 0;
}
int g(int a,int b)
{
    if(b!=0)
     return (g(b,a%b));
    else
     return a;
}
